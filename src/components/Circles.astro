  class="sticky -top-[140dvh] h-[140dvh] w-full translate-x-20  opacity-0 transition-all delay-700 duration-1000"
  id="circleSvg"
>
    <svg 
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 200 200"
    width="100%"
    height="100%"
    class="bg-yellow-800"
  >
  
    <!-- Define a shadow filter -->

    <defs>
      <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
        <!-- Outer shadow with small blur -->
        <feDropShadow
          dx="0"
          dy="0"
          stdDeviation="5"
          flood-color="#000000"
          flood-opacity="0.1"></feDropShadow>
      </filter>
    </defs>

