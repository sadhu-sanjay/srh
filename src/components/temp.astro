
function animateCX(targetCX: any, targetCY: any, duration = 700) {
    const startTime = performance.now();

      const initialCX = parseFloat(circle.getAttribute("cx")) || 0;
      const deltaCX = targetCX - initialCX;

      function animate(time: number) {

        const elapsed = time - startTime;
        const progress = Math.min(elapsed / duration, 1); // Ensure progress doesn't exceed 1

        // Calculate the current cx based on progress
        const currentCX = initialCX + deltaCX * progress;

        circle.setAttribute("cx", currentCX.toString());

        if (progress < 1) {
          requestAnimationFrame(animate); // Continue animating until done
        }
      }

      requestAnimationFrame(animate);
  } 
