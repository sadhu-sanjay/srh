    break7,
    break8,
    break9,
    break10,
    break11,
    break12,
    break13,
  } from "../constants";

  const settingsIcon1 = document.getElementById("settings-icon1");
  const settingsIcon2 = document.getElementById(
    "settings-icon2"
  ) as HTMLElement;
  const settingsIcon3 = document.getElementById(
    "settings-icon3"
  ) as HTMLElement;
  const settingsIcon4 = document.getElementById(
    "settings-icon4"
  ) as HTMLElement;

  const mainWindow = document.getElementById("main-window");

  const settingsSVGContainer = document.getElementById(
    "settings-svg-container"
  ) as HTMLElement;

  // for (let i = 0; i < 3; i++) {
  //   const svgElement = document.createElement('div'); // Wrap the SVG
  //   svgElement.innerHTML = svgMarkup; // Set the SVG markup
  //   settingsSVGContainer.appendChild(svgElement); // Append to the container
  // }

  mainWindow?.addEventListener("scroll", (ev: Event) => {
    const target = ev.target as Element;
    const scrollableHeight = target.scrollHeight - window.outerHeight;
    const scrollPercentage = (target.scrollTop / scrollableHeight) * 100;

    if (scrollPercentage > break4 && scrollPercentage < break10) {
      settingsIcon1!.style.top = "0";
      settingsIcon1!.style.scale = "0.6";

      settingsIcon2!.style.top = "0";
      settingsIcon2!.style.scale = "1"
      settingsIcon2!.style.scale = "0.7"
    } else if (scrollPercentage > break10 && scrollPercentage <= break11) {

      settingsIcon1!.style.scale = "1.1"
      settingsIcon1!.style.top = "150dvh";

      settingsIcon2!.style.top = "80dvh";
      settingsIcon2!.style.scale = "1.2"

      
      settingsIcon3!.style.top = "0";
      settingsIcon3!.style.scale = "1"

    } else if (scrollPercentage > break11 && scrollPercentage <= break12) {
      settingsIcon1!.style.scale = "0.9"
      settingsIcon1!.style.top = "210dvh";

      settingsIcon2!.style.top = "170dvh";
      settingsIcon2!.style.scale = "1.4"

      settingsIcon3!.style.top = "100dvh";
      settingsIcon3!.style.scale = "1.3"

    }
  });
</script>
