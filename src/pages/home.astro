---
import Image from "astro/components/Image.astro";
---

<main id="main-window" class="relative h-[100dvh] w-full bg-white">
  <div id="spacer" class="h-[300dvh] w-full bg-primary">
    <img
      id="logo"
      src="SRHLogo_Glitch.gif"
      alt="SRH Logo website logo"
      class="sticky left-1/2 top-1/2 w-1/3 -translate-x-1/2 -translate-y-1/2 transition-all duration-700 sm:w-3/12 sm:landscape:w-1/12"
    />

    <div
      id="mainTitle"
      class="sticky top-full w-full text-center text-accent transition-all duration-700"
    >
      <div
        id="mainText"
        class="w-full overflow-hidden whitespace-nowrap text-center text-[33vw] font-black leading-none"
      >
        AR<span class="relative inline-block"
          >I<span
            id="iId"
            class="absolute left-0 top-0 inline-block w-full origin-bottom transition-all duration-700"
            >I</span
          ></span
        >SE
      </div>
      <div
        id="subText"
        class="w-full -translate-y-1/2 whitespace-nowrap text-center text-[9.5vw] font-black leading-none"
      >
        YE SLEEPING GIANTS
      </div>
    </div>
  </div>

  <script>
    const break1 = 10;
    const break2 = 20;
    const break3 = 30;

    const logo = document.getElementById("logo") as HTMLImageElement;
    const main = document.getElementById("main-section") as HTMLElement;
    const mainTitle = document.getElementById("mainTitle") as HTMLElement;
    const iId = document.getElementById("iId") as HTMLElement;

    const isMobile = window.matchMedia("(max-width: 639px)").matches;
    const isTablet = window.matchMedia(
      "(min-width: 640px) and (max-width: 1023px)"
    ).matches;
    const isDesktop = window.matchMedia(
      "(min-width: 1024px) and (max-width: 1279px)"
    ).matches;
    const isLargeScreen = window.matchMedia("(min-width: 1280px)").matches;

    function insertInMainFunction(text: string) {
      const newh1 = document.createElement("h1"); // Create a new h1 element
      newh1.textContent = text; // Set the text content
      main.appendChild(newh1); // Append the new h1 element to the main element
    }

    window.addEventListener("scroll", (ev: Event) => {
      const scrollY = window.scrollY;
      const scrollHeight = document.documentElement.scrollHeight;
      const scrobbaleHeight = scrollHeight - window.outerHeight;

      const scrolledPercentage = (scrollY / scrobbaleHeight) * 100;
      console.log("here & There", scrolledPercentage);

      function mainTitleAnimation() {
        if (isMobile) {
        } else {
        }
      }

      if (scrolledPercentage <= break1) {
        logo.style.left = "50%";
        logo.style.top = "50%";
        logo.style.transform = "translate(-50%,-50%)";

        mainTitle.style.top = "100%";

        iId.style.transform = "scaleY(1)";
      } else if (scrolledPercentage > break1 && scrolledPercentage <= break2) {
        logo.style.left = "4%";
        logo.style.top = "2%";
        logo.style.transform = "translate(0,0)";


        if (isMobile) {
          mainTitle.style.top = "78%";
        } else if (isTablet) {
          mainTitle.style.top = "71%";
        } else if (isDesktop) {
          mainTitle.style.top = "49%";
        } else {
          mainTitle.style.top = "32%";
        }

        iId.style.transform = "scaleY(1)";
      } else if (scrolledPercentage > break2 && scrolledPercentage >= break3) {
        // mainTitle.style.top = "75%";
        // iId.style.transform = "scaleY(5)";
      }
    });
  </script>
</main>
