---
import MyButton from "../components/atoms/MyButton.astro";
import Logo from "../components/atoms/logo.astro";
import Layout from "../layouts/Layout.astro";
import MyFooter from "../components/My-footer.astro";
import PlaceHolderImage from "../assets/images/placeHolderImage.astro";

import { BrandCategories } from "../constants";

import p1 from "../assets/images/p1.png";
import p2 from "../assets/images/p2.png";
import p3 from "../assets/images/p3.png";
import p4 from "../assets/images/p4.png";
import p5 from "../assets/images/p5.png";
import p6 from "../assets/images/p6.png";

import Image from "astro/components/Image.astro";


---

<Layout title="our work">
  <div
    class="flex h-[90dvh] w-full flex-col items-center justify-center bg-primary"
  >
    <div class="flex flex-col items-center justify-center">
      <h1 class="w-[90%] text-center text-9xl font-black text-accent">
        THE <span class="text-secondary-accent">WORK</span>
      </h1>
      <p class="w-[80%] text-center text-xl font-medium text-secondary-accent">
        From brand identies to integrated campaigns, here are some of our
        greatest hits.
      </p>
    </div>

    <div
      class="mt-8 flex flex-wrap items-center justify-center gap-2 px-8 sm:gap-4"
    >
      {
        BrandCategories.map((category: string) => (
          <MyButton
            class="!border-2 !border-white !py-2.5 !text-xl !font-normal !text-white"
            title={category}
          />
        ))
      }
    </div>
  </div>

  <div
    class="flex min-h-[100dvh] w-full flex-col items-center bg-primary p-8 transition-all duration-1000 sm:p-12"
    id="test-group"
  >
    <div
      id="main-container"
      class="grid h-auto w-full grid-cols-1 items-center justify-items-center gap-8 sm:grid-cols-2  md:grid-cols-2 2xl:grid-cols-3"
    >
      <item
        style="background-image: url(/logo.png);"
        class="aspect-video h-full w-[80%] overflow-clip rounded-2xl object-center sm:w-full"
      >
        <Image
          class="h-full w-full object-cover"
          src={p1}
          alt="A description of my image."
        />
      </item>
      <item
        style="background-image: url(/logo.png);"
        class="aspect-video h-full w-[80%] overflow-clip rounded-2xl object-center sm:w-full"
      >
        <Image
          class="h-full w-full object-cover"
          src={p2}
          alt="A description of my image."
        />
      </item><item
        style="background-image: url(/logo.png);"
        class="aspect-video h-full w-[80%] overflow-clip rounded-2xl object-center sm:w-full"
      >
        <Image
          class="h-full w-full object-cover"
          src={p3}
          alt="A description of my image."
        />
      </item><item
        style="background-image: url(/logo.png);"
        class="aspect-video h-full w-[80%] overflow-clip rounded-2xl object-center sm:w-full"
      >
        <Image
          class="h-full w-full object-cover"
          src={p4}
          alt="A description of my image."
        />
      </item><item
        style="background-image: url(/logo.png);"
        class="aspect-video h-full w-[80%] overflow-clip rounded-2xl object-center sm:w-full"
      >
        <Image
          class="h-full w-full object-cover"
          src={p5}
          alt="A description of my image."
        />
      </item><item
        style="background-image: url(/logo.png);"
        class="aspect-video h-full w-[80%] overflow-clip rounded-2xl object-center sm:w-full"
      >
        <Image
          class="h-full w-full object-cover"
          src={p6}
          alt="A description of my image."
        />
      </item>
    </div>

    <MyButton
      class="left-1/2 !my-10 !border-2 !border-white !py-2.5 !text-xl !font-normal !text-white"
      title="View More"
    />
  </div>

  <MyFooter />
</Layout>
